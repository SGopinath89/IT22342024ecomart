<!-- views/updateOrder.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Order</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Update Order</h1>
        <form action="/order/update/{{order._id}}" method="POST">
            <div class="form-group">
                <label for="total">Order number:</label>
                <input type="text" name="order" value="{{order.order}}" readonly>
                <label for="total">Total:</label>
                <input type="text" class="form-control" id="total" name="total" value="{{order.total}}">
            </div>
            <div class="form-group">
                <label for="customerName">Customer Name:</label>
                <input type="text" class="form-control" id="customerName" name="customerName" value="{{order.customerName}}">
            </div>
            <div class="form-group">
                <label for="items">Items:</label>
                <textarea class="form-control" id="items" name="items">{{order.items}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update Order</button>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
